extends ../layout

block content
  .container
    h1.main-title Edit Event
    form(action=`/events/${event.id}?_method=PUT`, method="POST")
      input(type="hidden", name="_method", value="PUT")
      include _form
      a.btn.btn-outline-secondary(href='javascript:window.history.back();') Back
      |
      button.btn.btn-outline-primary(type="submit") Update Your Event
